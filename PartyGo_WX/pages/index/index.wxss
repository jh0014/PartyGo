/* pages/main/main.wxss */
.box{
  flex-direction:column;
  display: flex;
  vertical-align:middle;
}

.title {
  align-items: center;
  justify-content:center;
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  height: 100rpx;
  margin-top:0rpx;
  z-index: 10;
  width: 100%;
  background-color: #3CB371;
}

.user-content{
  flex-direction:row;
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 0rpx 0rpx 30rpx;
  width:95%;
  height:auto;
}

.user-info{
  flex-direction:column;
  display: flex;
  vertical-align:middle;
  text-align: center;
  align-items: center;
  width:50%
}

.banner{
  margin:20rpx;
  flex-direction:row;
  justify-content:center;
  display: flex;
  height: 80rpx
}

.list{
  flex-direction:row;
  justify-content:center;
  display: flex;
  flex-wrap: wrap;
}

.divLine{
  background: #3CB371;
  width:35%;
  height: 1rpx;
  flex-direction:column;
  display: flex;
  vertical-align:middle;
  text-align: center;
  align-items: center;
}

.item{
  border: 3rpx dotted #008B45;
  border-radius: 5px;
  height: 200rpx;
  width: 670rpx;
  padding: 5rpx;
  flex-direction:row;
  display: flex;
  margin-top: 25rpx;
}

.num{
  text-align: right;
  font-size: 25rpx;
  font-family:monospace;
}

.item-text{
  width: 60%;
  height: 100%;
  flex-direction:column;
  display: flex;
  justify-content:center;
}

.item-name{
  flex-direction:column;
  display: flex;
  justify-content:center;
  height: 65%;
  font-size:40rpx;
}
.item-author{
  font-size:25rpx;
  margin:5rpx;
  height: 35%;
}

.item-read{
  width: 40%;
  height: 100%;
  flex-direction:column;
  display: flex;
  justify-content:center;
  align-items:center;
}

.item-star{
  flex-direction:column;
  display: flex;
  justify-content:center;
  height: 98%;
  font-size:40rpx;
}

.item-num{
  font-size:20rpx;
  margin:5rpx;
  height: 2%;
}